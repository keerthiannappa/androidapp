<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.ac.kcgcollege.kcgapplyleave.Leave">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <RadioGroup
                android:id="@+id/leave_rg"
                android:layout_width="261dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="213dp"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="71dp">

                <RadioButton
                    android:id="@+id/leave_ml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Medical" />

                <RadioButton
                    android:id="@+id/leave_cl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Casual" />
            </RadioGroup>

            <Button
                android:id="@+id/leave_apply"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="410dp"
                android:text="Apply"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <ScrollView
                android:layout_width="320dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="300dp"
                tools:layout_editor_absoluteX="0dp">

                <EditText
                    android:id="@+id/leave_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed"
                    android:inputType="textMultiLine" />

            </ScrollView>

            <ImageButton
                android:id="@+id/leave_datepicker_from"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="80dp"
                android:background="@color/colorAccent"
                app:srcCompat="@android:drawable/ic_menu_my_calendar" />

            <ImageButton
                android:id="@+id/leave_datepicker_to"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="310dp"
                android:layout_marginTop="80dp"
                android:background="@color/colorAccent"
                app:srcCompat="@android:drawable/ic_menu_my_calendar" />

            <EditText
                android:id="@+id/leave_from"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="80dp"
                android:ems="10"
                android:fontFamily="sans-serif-condensed"
                android:inputType="date" />

            <EditText
                android:id="@+id/leave_to"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="80dp"
                android:ems="10"
                android:fontFamily="sans-serif-condensed"
                android:inputType="date" />



            <TextView
                android:id="@+id/leave_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-condensed"
                android:text="From"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/leave_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-condensed"
                android:text="To"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/leave_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="150dp"
                android:fontFamily="sans-serif-condensed"
                android:text="No. of Days :"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/leave_days"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="150dp"
                android:ems="10"
                android:fontFamily="sans-serif-condensed"
                android:inputType="date" />

            <TextView
                android:id="@+id/leave_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="260dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Reason"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/leave_ty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="210dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Type :"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/leave_ack"
                android:layout_width="357dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="470dp"
                android:background="@color/colorAccent"
                android:fontFamily="casual"
                android:text="You have an outstanding Leave request

Proceeding with new request will overwrite outstanding request."
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorPrimary"
                android:textColorLink="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="invisible"
                tools:layout_editor_absoluteX="9dp" />
        </android.support.design.widget.CoordinatorLayout>
    </ScrollView>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:fontFamily="sans-serif-condensed"
        android:text="LEAVE"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorPrimary"
        android:textSize="36sp"
        android:textStyle="bold" />


</android.support.design.widget.CoordinatorLayout>
