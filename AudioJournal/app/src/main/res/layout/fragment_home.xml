<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ganeshpartheeban.audiojournal.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="303dp"
            app:srcCompat="@drawable/microphone1600" />

        <Button
            android:id="@+id/startrecording"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:layout_alignBaseline="@+id/stoprecording"
            android:layout_alignBottom="@+id/stoprecording"
            android:layout_alignEnd="@+id/textView"
            android:layout_marginEnd="14dp" />

        <Button
            android:id="@+id/stoprecording"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Stop"
            android:layout_below="@+id/spinner"
            android:layout_alignEnd="@+id/spinner" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:entries="@array/id_arrays"
            android:popupBackground="@color/colorAccent"
            android:layout_below="@+id/imageView2"
            android:layout_toEndOf="@+id/textView" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/spinner"
            android:layout_marginStart="108dp"
            android:text="Format  : "
            android:textColor="@color/colorAccent"
            android:textSize="20dp" />
    </RelativeLayout>


</FrameLayout>
